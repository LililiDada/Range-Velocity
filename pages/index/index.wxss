page {
  padding-bottom: 30rpx;
  width: 100%;
  overflow-x: hidden;
  
}

.company {
  margin: 0;
  padding: 0;
}

.contain {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  width: 300rpx;
  background: #619edc;
  color: white;
  height: 80rpx;
  text-align: center;
  border-radius: 45rpx;
  line-height: 80rpx;
  letter-spacing: 5rpx;
  z-index: 99;
}

.business {
  width: 85%;
  height: 300rpx;
  padding: 20rpx;
  border: 5rpx solid #619edc;
  border-radius: 10rpx;
  position: relative;
  top: -40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top: 40rpx;
}

.one_business {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 65rpx;
}

.lead {
  width: 90%;
  text-align: center;
  margin: 0 auto;
  position: relative;
  top: -20rpx;
}

.guide {
  width: 60rpx;
}

.enroll {
  display: flex;
  flex-direction: column;
  align-items: center;
  letter-spacing: 1.6rpx;
  width: 100%;
}

.verify {
  width: 92%;
  margin: 0 auto;
  margin-bottom: 35rpx;
  /* display: flex;
  flex-direction: column;
  justify-content: center; */
}

.caption {
  display: inline-block;
  background: #619edc;
  color: #fff;
  padding: 0 30rpx 0 20rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  line-height: 60rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.number {
  font-size: 45rpx;
  padding: 0 10rpx;
}

.text {
  padding: 0 10rpx;
  font-family: "微软雅黑";
  font-size: 38rpx;
}

.colon {
  width: 20rpx;
  position: relative;
  top: -15rpx;
}

.standard {
  color: #7a7a7a;
  margin-top: 20rpx;
  letter-spacing: 2rpx;
  border: 2rpx #7a7a7a dashed;
  padding: 10rpx 20rpx;
  /* text-align: center; */
}

.form {
  background: #ccc;
  display: inline-block;
  border-radius: 10rpx;
  padding: 0rpx 20rpx;
  line-height: 50rpx;
  letter-spacing: 1.6rpx;
  /* font-size:38rpx; */
}

.form_e {
  margin-top: 7rpx;
}

.tip {
  margin-top: 10rpx;
  color: #7a7a7a;
  letter-spacing: 1.6rpx;
}

.contact {
  background: #6a843d;
  color: white;
  border-radius: 10rpx;
  margin-top: 20rpx;
  /* margin-bottom: 20rpx; */
  font-size: 36rpx;
  height: 75rpx;
  line-height: 75rpx;
}

.steps {
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

.separate {
  width: 98%;
  border-style: dashed;
  border-color: #ccc;
  overflow: hidden;
  margin: 20rpx auto;
}

.introduce {
  letter-spacing: 2rpx;
  display: flex;
  /* justify-content: center; *//* align-items: flex-start; */
  margin-top: 20rpx;
}

.introduce_img {
  width: 650rpx;
  height: 400rpx;
}

.introduce_text {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

.introduce_contain {
  font-size: 26rpx;
  color: #7a7a7a;
}

.address {
  width: 100%;
  margin-top: 20rpx;
}

.address_one {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  background: #a4a6bc;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
}

.address_des {
  margin-left: 60rpx;
  font-size: 28rpx;
  color: #7a7a7a;
}

.affiliate text, .actual text {
  margin-left: 10rpx;
}

.license {
  width: 100%;
}

.material {
  display: flex;
  margin-top: 10rpx;
}

.meterial_s {
  width: 50%;
}

.meterial_sm {
  margin-bottom: 20rpx;
}

.description {
  margin-left: 10rpx;
  font-size: 27rpx;
}

.last {
  width: 100%;
  height: 25rpx;
  background: #ededed;
}

.about {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}

.about_img {
  width: 40%;
  height: 340rpx;
}

.about_contain {
  width: 55%;
}

.contain_one {
  height: 47%;
  margin-bottom: 3%;
  border: 2rpx solid #ededed;
  font-size: 27rpx;
  display: flex;
}

.contain_two {
  height: 43%;
  font-size: 26rpx;
  border: 2rpx solid #ededed;
  padding: 2%;
}
.about_icon{
  width: 40rpx;
}
.phone_des{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 0 30rpx 0 10rpx;
}
.phone{
  display:inline-block;
  font-size: 32rpx;
  padding: 5rpx 20rpx;
  background: #227997;
  color: #fff;
  border-radius: 10rpx;
}
.phone_big{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.manifesto{
  background: #fffbe6;
  text-align: center;
  line-height: 65rpx;
  color: #f8a42c;
  display: flex;
  justify-content: center;
  align-items: center;
}
.trust{
  width: 50%;
}